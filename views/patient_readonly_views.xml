<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
  <record id="view_hospital_patient2_readonly_tree" model="ir.ui.view">
		<field name="name">hospital.patient2.readonly.tree</field>
		<field name="model">hospital.patient2</field> 
		<field name="priority">20</field>
		<field name="arch" type="xml">
			<tree string="Patients" create="0" delete="0" edit="0">
				<field name="name"/>
				<field name="date_of_birth" optional="show"/>
				<field name="gender" optional="hide"/>
			</tree>
		</field>
	</record> 
     
   <record id="view_hospital_patient2_readonly_form" model="ir.ui.view">
		<field name="name">hospital.patient2.readonly.form</field>
		<field name="model">hospital.patient2</field>
		<field name="arch" type="xml">
			<form string="Patients" create="0" delete="0" edit="0">
          <sheet>
           <group>
             <group>
				   <field name="name" />
				   <field name="date_of_birth" />
             </group> 
				 <group>
              <field name="gender" />
             </group>
            </group>
           </sheet>

           <div class="oe_chatter">
             <field name="message_follower_ids" groups="base.group_user"/>
             <field name="message_ids"/>
           </div>

			</form>
		</field>
	</record>


	<record id="action_hospital_readonly_patient" model="ir.actions.act_window">
		<field name="name">View Patients</field>
		<field name="res_model">hospital.patient2</field>
		<field name="view_mode">tree,form</field>
				 <field name="view_ids" eval="[Command.clear(),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_hospital_patient2_readonly_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_hospital_patient2_readonly_form')})]"/>
		<field name="help" type="html"> 
			<p class="o_view_nocontent_smiling_face">
				Create a new patient2
			</p>
		</field>
	</record>
</odoo>
 







